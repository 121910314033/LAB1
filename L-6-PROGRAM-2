# To Delete the node from a linked list with given key....
class Node: 

	 
	def __init__(self, data): 
		self.data = data 
		self.next = None

class LinkedList: 

	
	def __init__(self): 
		self.head = None

	
	def push(self, new_data): 
		new_node = Node(new_data) 
		new_node.next = self.head 
		self.head = new_node 

	
	def deleteNode(self, key): 
		
		
		temp = self.head 

		 
		if (temp is not None): 
			if (temp.data == key): 
				self.head = temp.next
				temp = None
				return

		
		while(temp is not None): 
			if temp.data == key: 
				break
			prev = temp 
			temp = temp.next

		
		if(temp == None): 
			return

		# Unlink the node from linked list 
		prev.next = temp.next

		temp = None


	# Utility function to print the linked LinkedList 
	def printList(self): 
		temp = self.head 
		while(temp): 
			print (" %d" %(temp.data)), 
			temp = temp.next



llist = LinkedList() 
llist.push((int)(input("enter the element1:"))) 
llist.push((int)(input("enter the element 2:"))) 
llist.push((int)(input("enter the element 3:"))) 
llist.push((int)(input("enter the element 4:"))) 

print ("Created Linked List: ") 
llist.printList() 
llist.deleteNode(95)
llist.printList()
OUTPUT:
enter the element1:21
enter the element 2:19
enter the element 3:87
enter the element 4:95
Created Linked List: 
 95
 87
 19
 21
 87
 19
 21
